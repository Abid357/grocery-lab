<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DashboardFragment">

    <LinearLayout
        android:id="@+id/statsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/productsStatTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="25"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="35sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">


            <TextView
                android:id="@+id/brandsStatTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="25"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="35sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/recordsStatTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="25"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="35sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statLabelsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statsLayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:text="Products"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="15dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:text="Brands"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="15dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:text="Records"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="15dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/lastPurchaseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statLabelsLayout"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:text="Last Purchase"
        android:textColor="@color/grey"
        android:textSize="20dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/lastPurchaseCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastPurchaseTextView"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="8dp"
        app:cardCornerRadius="4dp" />

    <TextView
        android:id="@+id/bestPurchaseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastPurchaseCardView"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:text="Best Purchase"
        android:textColor="@color/grey"
        android:textSize="20dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/bestPurchaseCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bestPurchaseTextView"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="8dp"
        app:cardCornerRadius="4dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/compareCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bestPurchaseCardView"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Compare Records"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>