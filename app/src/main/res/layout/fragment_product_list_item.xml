<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Product"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/uomLabelTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/productNameTextView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Measure"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/uomValueTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/uomLabelTextView"
            android:layout_toEndOf="@id/productNameTextView"
            android:text="Unit"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/brandCountLabelTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/uomLabelTextView"
            android:text="Brands"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/brandCountValueTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/brandCountLabelTextView"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/uomValueTextView"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteProductButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/deleteButton"
            android:contentDescription="Delete product"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/baseline_delete_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="20dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>